<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout android:id="@+id/RelativeLayout02"
		android:layout_height="50dp" android:layout_width="fill_parent"
		android:background="@drawable/header_background">
		<TextView android:layout_width="wrap_content"
			android:textColor="#FFFFFF" android:padding="12dp" android:textStyle="bold"
			android:textSize="18sp" android:layout_height="wrap_content"
			android:text="Flight Safety Report" android:layout_centerInParent="true"></TextView>
		<ImageButton android:id="@+id/btnNewReport"
			android:visibility="gone" android:layout_width="60dp"
			android:layout_height="35dp" android:src="@drawable/plus"
			android:background="@drawable/background" android:textColor="#000000"
			android:textStyle="bold" android:layout_alignParentRight="true"
			android:layout_margin="7dp"></ImageButton>
	</RelativeLayout>
	<RelativeLayout android:id="@+id/RelativeLayout03"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="@drawable/world" android:layout_above="@+id/RelativeLayout04"
		android:layout_below="@+id/RelativeLayout02">
		<LinearLayout android:id="@+id/ll01" android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:padding="10dp">
			<Button android:id="@+id/btnMainMenuQueue" android:background="@drawable/btn_yellow"
				style="@style/ButtonText" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Queue"
				android:padding="30dp" android:textSize="40sp" android:typeface="monospace"
				android:layout_margin="15dp" android:textStyle="bold" />

			<Button android:id="@+id/btnMainMenuSettings"
				android:background="@drawable/btn_yellow" style="@style/ButtonText"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="Settings" android:padding="30dp" android:textSize="40sp"
				android:layout_margin="15dp" android:typeface="monospace"
				android:textStyle="bold" />
				
			<Button android:id="@+id/btnMainMenuReport"
				android:background="@drawable/btn_yellow" style="@style/ButtonText"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="New" android:padding="30dp" android:textSize="40sp"
				android:typeface="monospace" android:layout_margin="15dp" />
				
		</LinearLayout>
		<ImageView android:id="@+id/ivLogo" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/pc_large"
			android:layout_below="@+id/ll01" android:layout_centerInParent="true"></ImageView>
	</RelativeLayout>
	<RelativeLayout android:id="@+id/RelativeLayout04"
		android:layout_height="50dp" android:layout_width="fill_parent"
		android:layout_alignParentBottom="true" android:background="@drawable/footer_background">
		<ImageButton android:id="@+id/btnMyProfile"
			android:visibility="gone" android:layout_width="70dp"
			android:layout_height="35dp" android:src="@drawable/setting"
			android:textStyle="bold" android:background="@drawable/background"
			android:textColor="#ffffff" android:layout_alignParentLeft="true"
			android:layout_margin="7dp"></ImageButton>
		<Button android:id="@+id/btnSendQueued" android:layout_width="100dp"
			android:layout_height="35dp" android:text="Send Queued"
			android:textStyle="bold" android:background="@drawable/background"
			android:textColor="#000000" android:layout_alignParentRight="true"
			android:layout_margin="7dp" android:visibility="gone"></Button>
	</RelativeLayout>
</RelativeLayout>

