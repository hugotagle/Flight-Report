<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#ffffff">
	<RelativeLayout android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:background="@drawable/wallpaper_background">

		<ImageView android:id="@+id/thumbnail" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/play_on_b" />
		<TextView android:layout_width="130dip"
			android:layout_height="wrap_content" android:id="@+id/editDate"
			android:text="07/03/11 12:35 PM" android:textSize="22sp"
			android:padding="20dip" android:textColor="#000000"
			android:layout_alignParentRight="true" android:layout_toRightOf="@+id/thumbnail"
			android:visibility="visible" />
		<TextView android:layout_width="130dip"
			android:layout_height="wrap_content" android:id="@+id/mediaFileName"
			android:text="47DKALD_01.jpg" android:textSize="16sp" android:padding="20dip"
			android:textColor="#000000" android:layout_alignParentRight="true"
			android:layout_toRightOf="@+id/thumbnail" android:layout_below="@+id/editDate"
			android:visibility="visible" />
	</RelativeLayout>
</LinearLayout>