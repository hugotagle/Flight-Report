<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
	android:layout_width="wrap_content" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout android:id="@+id/RelativeLayout02"
		android:layout_height="50dp" android:layout_width="fill_parent"
		android:background="@drawable/header_background"
		android:layout_alignParentTop="true">
		<TextView android:layout_width="wrap_content" android:id="@+id/audioTitle"
			android:textColor="#FFFFFF" android:padding="10dp" android:textStyle="bold"
			android:textSize="22sp" android:layout_height="wrap_content"
			android:text="Playback" android:layout_alignParentLeft="true"></TextView>
		<ImageButton android:id="@+id/btnCloseAudioRecord"
			android:layout_width="60dp" android:layout_height="35dp"
			android:src="@drawable/close_on" android:background="@drawable/background"
			android:textColor="#000000" android:textStyle="bold"
			android:layout_alignParentRight="true" android:layout_margin="7dp"></ImageButton>
	</RelativeLayout>
	<RelativeLayout android:id="@+id/RelativeLayout03"
		android:layout_below="@+id/RelativeLayout02" android:paddingBottom="10dp"
		android:background="@drawable/audio_screen_background" android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<LinearLayout android:layout_height="wrap_content"
			android:paddingBottom="140dp" android:layout_width="wrap_content"
			android:orientation="vertical" android:layout_centerInParent="true">
			<Chronometer android:layout_centerInParent="true"
				android:textSize="28sp" android:textColor="#800000" android:padding="10dip"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/chronometer"></Chronometer>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:paddingTop="10dp" android:layout_width="wrap_content"
			android:orientation="horizontal" android:layout_centerInParent="true">
			<Button android:id="@+id/btnRecord" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:enabled="true" 
				android:drawableTop="@drawable/record_on_b" android:background="@android:color/transparent"
				android:text="Record" />
			<Button android:id="@+id/btnStop" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:drawableTop="@drawable/stop_off_b"
				android:background="@android:color/transparent" android:enabled="false"
				android:text="Stop" />
			<Button android:id="@+id/btnPlay" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:drawableTop="@drawable/play_off_b"
				android:background="@android:color/transparent" android:enabled="false"
				android:text="Play" android:visibility="visible"/>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:paddingTop="120dp" android:layout_width="wrap_content"
			android:orientation="vertical" android:layout_centerInParent="true">
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
